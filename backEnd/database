with as创建临时表
with
A的临时表 as
(
	select 需要的A表字段... from A表 where 某一分区
),
B的临时表 as
(
	select 需要的B表字段... from B表 where 某一分区
),
insert overwrite table xx partition(dt='2020-06-14')
select
    A的临时表.id,
    B的临时表.price
from A的临时表
left join B的临时表 on A的临时表.spu_id=B的临时表.id;
